// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"required":["userName","phone","type","password"],
		"_id": {
			"description": "ID，系统自动生成"
		},
		"userName":{
			"bsonType": "string",
			"title": "用户名",
			"trim": "both"
		},
		"phone":{
			"bsonType": "string",
			"title": "电话",
			"trim": "both"
		},
		
		"email":{
			"bsonType": "string",
			"title": "邮箱",
			"trim": "both"
		},
		"type":{
			"bsonType": "bool",
			"title": "用户类型(是否为管理员)",
			"description": "false为用户，true为管理员",
			"defaultValue": "false"
		},
		"avator":{
			"bsonType": "string",
			"title": "用户头像"
		},
		"password":{
			"bsonType": "string",
			"title": "密码",
			"trim": "both"
		}
	}
}